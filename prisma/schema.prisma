generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
}

model Book {
  id        Int      @id @default(autoincrement())
  title     String
  author    String
  year      Int
  createdAt DateTime @default(now())
}

enum Role {
  ADMIN
  USER
}
